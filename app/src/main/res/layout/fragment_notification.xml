<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginVertical="16dp"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRulePlay"
                    android:layout_width="0dp"
                    app:backgroundTint="@null"
                    android:layout_marginHorizontal="16dp"
                    app:icon="@drawable/ic_rules"
                    app:iconGravity="textTop"
                    app:iconSize="36dp"
                    android:layout_weight="1"
                    android:text="قوانین رول پلی"
                    android:background="@drawable/btn_gradient_shape"
                    android:layout_height="match_parent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRulePublic"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp"
                    app:icon="@drawable/ic_rules"
                    app:iconGravity="textTop"
                    app:iconSize="36dp"
                    app:backgroundTint="@null"
                    android:text="قوانین عمومی"
                    android:background="@drawable/btn_gradient_shape"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUpdate"
                    android:layout_width="0dp"
                    app:backgroundTint="@null"
                    android:layout_marginHorizontal="16dp"
                    app:icon="@drawable/ic_view"
                    app:iconGravity="textTop"
                    app:iconSize="36dp"
                    android:layout_weight="1"
                    android:text="بروزرسانی ها"
                    android:background="@drawable/btn_gradient_shape"
                    android:layout_height="match_parent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNotification"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    app:icon="@drawable/ic_notification"
                    app:iconGravity="textTop"
                    app:iconSize="36dp"
                    android:layout_marginEnd="16dp"
                    app:backgroundTint="@null"
                    android:text="اطلاعیه ها"
                    android:background="@drawable/btn_gradient_shape"
                    android:layout_height="match_parent"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
